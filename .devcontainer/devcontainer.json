{
  "name": "Cloud Watch Dev",
  "dockerfile": "Dockerfile",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "denoland.vscode-deno",
        "ms-vscode.vscode-node-debug2",
        "oven.bun-vscode"
      ],
      "settings": {
        "deno.enable": true,
        "deno.unstable": true,
        "(javascript)": {
          "editor.defaultFormatter": "denoland.vscode-deno",
          "editor.formatOnSave": true
        },
        "(typescript)": {
          "editor.defaultFormatter": "denoland.vscode-deno",
          "editor.formatOnSave": true
        },
        "(json)": {
          "editor.defaultFormatter": "denoland.vscode-deno"
        }
      }
    }
  },
  "forwardPorts": [],
  "postCreateCommand": "node --version && deno --version && bun --version",
  "remoteUser": "vscode"
}
